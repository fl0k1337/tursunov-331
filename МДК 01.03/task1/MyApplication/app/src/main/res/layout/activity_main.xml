<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f4f7f9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_balanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Общий Баланс"
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_balanceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 000 ₽"
        android:textSize="48sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="#00a86b"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textView_balanceTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_summaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_card"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView_balanceAmount">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Доходы за месяц"
                android:textSize="14sp"
                android:textColor="#888888" />
            <TextView
                android:id="@+id/textView_incomeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 000 ₽"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#00a86b"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Расходы за месяц"
                android:textSize="14sp"
                android:textColor="#888888" />
            <TextView
                android:id="@+id/textView_expenseAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 000 ₽"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ff4d4f"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_recentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Последние операции"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layout_summaryCard"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_viewHistory"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вся история >"
        android:textColor="#007bff"
        android:textSize="14sp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_recentTitle"
        app:layout_constraintBottom_toBottomOf="@id/textView_recentTitle" />

    <TextView
        android:id="@+id/textView_placeholderList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:padding="16dp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textView_recentTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_addExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Добавить новый расход"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#007bff"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>